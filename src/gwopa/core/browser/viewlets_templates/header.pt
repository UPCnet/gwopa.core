<tal:block tal:define="portal_state context/@@plone_portal_state;
                       portal_url portal_state/portal_url;"
           i18n:domain="gwopa">

   <link rel="stylesheet" tal:attributes="href string:/++theme++gwopa.theme/fontawesome/css/all.css" >

    <div class="header">
        <div class="menuheader">
            <div class="menuleft">
                <a href="#" tal:attributes="href string:${portal_url}"><i class="fa fa-bars" aria-hidden="true"></i></a>
            </div>
            <div class="menuright">
                <a href="#" tal:attributes="href string:${portal_url}"><img  tal:attributes="src string:${context/absolute_url}/++theme++gwopa.theme/assets/images/logoGWOPA-header.png"></a>
            </div>
        </div>
    </div>

  <div class="sidenav">
    <ul id="sidenav-vertical">


        <ul tal:define="selected_tab python:viewlet.selected_portal_tab">
            <span tal:content="selected_tab"></span>
           <!--  <tal:tabs tal:repeat="tab portal_tabs">
              <li tal:define="tid tab/id"
                  tal:attributes="class python:selected_tab==tid and 'selected' or nothing">
                  <a href=""
                     tal:content="tab/name"
                     tal:attributes="href tab/url;">
                    Tab Name
                  </a>
              </li>
            </tal:tabs> -->
        </ul>


        <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}" href="#"><i class="fa fa-home" aria-hidden="true"></i> PMP </a>
        <tal:omit-tag tal:condition="not:viewlet/isRootFolder">
            <ul id="sidenav-vertical-overview">
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/areas" href="#"><i class="fas fa-chart-area" aria-hidden="true"></i> Areas </a>
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/teams" href="#"><i class="fas fa-users" aria-hidden="true"></i> Teams </a>
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/files" href="#"><i class="fas fa-file" aria-hidden="true"></i> Files </a>
            </ul>
        </tal:omit-tag>

        <tal:omit-tag tal:condition="viewlet/isRootFolder">
            <ul id="sidenav-vertical-overview">
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${viewlet/projectPath}" href="#"><i class="fas fa-home" aria-hidden="true"></i> Overview </a>
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${viewlet/projectPath}/projectareas" href="#"><i class="fas fa-chart-area" aria-hidden="true"></i> Areas </a>
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${viewlet/projectPath}/projectteams" href="#"><i class="fas fa-users" aria-hidden="true"></i> Team </a>
                <a class="plone-btn plone-btn-info" tal:attributes="href string:${viewlet/projectPath}/projectfiles" href="#"><i class="fas fa-file" aria-hidden="true"></i> Files </a>
            </ul>
            <a class="plone-btn plone-btn-success" tal:attributes="href string:${viewlet/projectPath}/planning" href="#"><i class="far fa-calendar-check" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Planning </tal:omit-tag></a>
            <a class="plone-btn plone-btn-success" tal:attributes="href string:${viewlet/projectPath}/collaborating" href="#"><i class="fa fa-users" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Collaboration </tal:omit-tag></a>
            <a class="plone-btn plone-btn-success" tal:attributes="href string:${viewlet/projectPath}/monitoring" href="#"><i class="fas fa-chart-pie" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Monitoring </tal:omit-tag></a>
            <a class="plone-btn plone-btn-success" tal:attributes="href string:${viewlet/projectPath}/reporting" href="#"><i class="far fa-file-alt" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Reporting </tal:omit-tag></a>
            <a class="plone-btn plone-btn-success" tal:attributes="href string:${viewlet/projectPath}/visualizating" href="#"><i class="fas fa-tachometer-alt" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Dashboard </tal:omit-tag></a>
        </tal:omit-tag>
    </ul>
    <ul id="portal-logout">
        <li>
            <a href="" tal:attributes="href string:${portal_url}/managePortal"><i class="fa fa-table" aria-hidden="true"></i>&nbsp;<tal:omit-tag i18n:translate=""> Configuration </tal:omit-tag></a>
        </li>
        <li>
            <a href="" tal:attributes="href string:${portal_url}/logout"><i class="fa fa-sign-out" aria-hidden="true"></i><tal:omit-tag i18n:translate=""> Log out </tal:omit-tag></a>
        </li>
    </ul>
  </div>
</tal:block>
