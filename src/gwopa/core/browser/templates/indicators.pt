<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gwopa">
<body>

<metal:content-core fill-slot="content-core">

  <metal:block define-macro="content-core">

      <h2>indicators list</h2>

      <button type="button" class="btn btn-primary">
        <a href="#">+ NEW GOAL</a>
      </button>
      <hr/>

<!--       <span tal:content="view/goalsList"></span> -->

          <tal:objects repeat="item view/goalsList">
            <tr>
              <td>
                <p>
                <i class="fa fa-list"></i>GOAL &nbsp;
                  <a tal:attributes="href item/url;" tal:content="item/title"> Item Title </a>
                </p>
                <p>
                  <span tal:content="item/description"> Item Description </span>
                </p>
                <p>
                  <span tal:content="item/description"> Item Description </span>

                </p>
              </td>

            </tr>
            <hr/>
          </tal:objects>

  </metal:block>

</metal:content-core>

</body>
</html>
