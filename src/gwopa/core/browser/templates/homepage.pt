<metal:page define-macro="master">
<tal:doctype tal:replace="structure string:&lt;!DOCTYPE html&gt;" />

<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:define="portal_state context/@@plone_portal_state;
          context_state context/@@plone_context_state;
          plone_view context/@@plone;
          plone_layout context/@@plone_layout;
          lang portal_state/language;
          view nocall:view | nocall: plone_view;
          dummy python: plone_layout.mark_view(view);
          portal_url portal_state/portal_url;
          checkPermission nocall: context/portal_membership/checkPermission;
          site_properties context/portal_properties/site_properties;
          ajax_include_head request/ajax_include_head | nothing;
          ajax_load python:False;"
      i18n:domain="gwopa"
      tal:attributes="lang lang;">

    <metal:cache tal:replace="structure provider:plone.httpheaders" />

  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <div tal:replace="structure provider:plone.htmlhead" />

    <tal:comment replace="nothing">
        Various slots where you can insert elements in the header from a template.
    </tal:comment>
    <metal:topslot define-slot="top_slot" />
    <metal:headslot define-slot="head_slot" />
    <metal:styleslot define-slot="style_slot" />

    <div tal:replace="structure provider:plone.scripts" />
    <metal:javascriptslot define-slot="javascript_head_slot" />

    <link tal:replace="structure provider:plone.htmlhead.links" />
    <meta name="generator" content="Plone - http://plone.com" />

  </head>

  <body tal:define="isRTL portal_state/is_rtl;
                    sl python:plone_layout.have_portlets('plone.leftcolumn', view);
                    sr python:plone_layout.have_portlets('plone.rightcolumn', view);
                    body_class python:plone_layout.bodyClass(template, view);"
        tal:attributes="class body_class;
                        dir python:isRTL and 'rtl' or 'ltr';
                        python:plone_view.patterns_settings()"
        id="visual-portal-wrapper">

    <div tal:replace="structure provider:plone.toolbar" />

    <header id="portal-top" i18n:domain="plone">
      <div tal:replace="structure provider:plone.portaltop" />
    </header>

    <div id="portal-mainnavigation" tal:content="structure provider:plone.mainnavigation">
      The main navigation
    </div>

    <aside id="global_statusmessage">
      <tal:message tal:content="structure provider:plone.globalstatusmessage"/>
      <div metal:define-slot="global_statusmessage"></div>
    </aside>

    <section id="viewlet-above-content" tal:content="structure provider:plone.abovecontent" />

    <article id="portal-column-content">
      <metal:block define-slot="content">
        <div metal:define-macro="content">
          <metal:slot define-slot="body">
            <article id="content">
              <metal:bodytext define-slot="main">
                <a class="context right" href="#"
                   tal:attributes="href string:${context/absolute_url}/projects/++add++Project" i18n:translate="">+ New Project</a>
                <h1 class="documentFirstHeading"><tal:omit-tag i18n:translate="">My Projects</tal:omit-tag> <span style="color:red" tal:condition="view/isManager" i18n:translate="">(Manager: 1 random element)</span></h1>
                <div class="has-table" tal:define="items view/myProjects;" >
                  <h4 tal:condition="not:items" i18n:translate="">
                    You don't have assigned projects.
                  </h4>
                  <tal:projects tal:condition="items"
                                tal:define="toLocalizedTime nocall: context/@@plone/toLocalizedTime;">
                    <div class="row">
                      <div class="col-xs-12 col-sm-12">
                        <tal:items repeat="item items">
                          <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="box">
                              <img class="img128" tal:attributes="src string:${item/image};"/>
                              <div class="card-body">
                                <h4 class="card-title top">
                                  <a tal:attributes="href item/url" tal:content="item/title">Event Title</a>
                                </h4>
                                <p class="card-text bottom"  itemprop="start" class="dtstart" tal:define="date_start item/start"
                                        tal:content="python:date_start.strftime('%m/%d/%Y')"></p>
                                <p class="card-text bottom"  itemprop="end" class="dtend" tal:define="date_end item/end"
                                        tal:content="python:date_end.strftime('%m/%d/%Y')"></p>
                                <p class="card-text bottom" tal:content="item/country"></p>
                                <p class="card-text bottom" tal:content="item/project_manager"></p>
                              </div>
                            </div>
                          </div>
                        </tal:items>
                      </div>
                    </div>
                  </tal:projects>
                </div>
                <br/>
                <h1 class="documentFirstHeading"><tal:omit-tag i18n:translate="">My company Projects </tal:omit-tag> <span style="color:red" tal:condition="view/isManager" i18n:translate="">(Manager: 4 random elements)</span></h1>
                <div class="has-table" tal:define="items view/companyProjects">
                  <h4 tal:condition="not:items" i18n:translate="">
                    Your company has no projects.
                  </h4>
                  <tal:CompanyProjects tal:define="toLocalizedTime nocall: context/@@plone/toLocalizedTime;" condition="items">
                    <div class="row">
                      <div class="col-xs-12 col-sm-12">
                        <tal:items repeat="item items">
                          <div class="col-lg-3 col-md-4 col-sm-6">
                            <div class="box">
                              <img class="img200" tal:attributes="src string:${item/image};"/>
                              <div class="card-body">
                                <h4 class="card-title top">
                                  <a tal:attributes="href item/url" tal:content="item/title">Event Title</a>
                                </h4>
                                <p class="card-text bottom" tal:content="item/country"></p>
                              </div>
                            </div>
                          </div>
                        </tal:items>
                      </div>
                    </div>
                  </tal:CompanyProjects>
                </div>
                <br/>
                <h1 class="documentFirstHeading" i18n:translate="">Search Projects</h1>
                <input type="text" class="pat-select2"  name="findProject"
                      data-pat-select2="placeholder:Search...;
                                        multiple:true;
                                        vocabularyUrl: ${portal_url}/select2-test.json;
                                        width:20em"
                      i18n:attributes="placeholder Search" />
                <div class="row">
                  <div class="col-xs-12 col-sm-12">
                    <tal:AllProjects define="items view/allProjects;
                            toLocalizedTime nocall: context/@@plone/toLocalizedTime;" condition="items">
                      <tal:items repeat="item items">
                        <div class="col-lg-3 col-md-4 col-sm-6">
                          <div class="box">
                            <img class="img200" tal:attributes="src string:${item/image};"/>
                            <div class="card-body">
                              <h4 class="card-title top">
                                <a tal:attributes="href item/url" tal:content="item/title">Event Title</a>
                              </h4>
                              <p class="card-text bottom" tal:content="item/country"></p>
                            </div>
                          </div>
                        </div>
                      </tal:items>
                    </tal:AllProjects>
                   </div>
                </div>
              </metal:bodytext>
            </article>
          </metal:slot>
        </div>
      </metal:block>
      <footer>
        <div id="viewlet-below-content" tal:content="structure provider:plone.belowcontent" />
      </footer>
    </article>

    <aside id="portal-column-one"
           metal:define-slot="column_one_slot"
           tal:condition="sl">
      <metal:portlets define-slot="portlets_one_slot">
        <tal:block replace="structure provider:plone.leftcolumn" />
      </metal:portlets>
    </aside>

    <footer id="portal-footer-wrapper" i18n:domain="plone">
      <div tal:replace="structure provider:plone.portalfooter" />
    </footer>

  </body>
</html>

</metal:page>
