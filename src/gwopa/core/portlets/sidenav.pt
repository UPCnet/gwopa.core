<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

<link rel="stylesheet" tal:attributes="href string:/++theme++gwopa.theme/fontawesome/css/all.css" >

<style type="text/css">
    #sidebar.col-sm-1.sidebar-offcanvas {
        height: 100%;
        background-color: #0a5272;
        padding: 0px;
        position: fixed;
        left: 0px;
        z-index: 1000;
        top: 50px;
        width: 8.33333333%;
    }
    a.plone-btn.plone-btn-info, a.plone-btn.plone-btn-success {
        border-radius: 0px;
        padding: 15px;
        margin: 0px 0px;
        border-bottom: 1px solid #0a5272;
        text-align: left;
        width: 100%;
        font-size: 12px;
    }
    .plone-btn-info:hover {
        color: #fff;
        background-color: #31b0d5;
        border-color: #269abc;
    }
    ul#sidenav-vertical-overview {
        padding: 0px;
        margin: 0px;
    }
    ul#sidenav-vertical {
        background-color: white;
    }
    ul#sidenav-vertical {
        padding: 0px;
        margin: 0px;
    }
    .fa, .fas {
        font-family: "Font Awesome 5 Pro";
        font-weight: 900;
    }
    ul .fa:before, ul .fas:before {
        font-size: 20px;
    }
    .sidenav2 ul#sidenav-vertical a img {
        width: 100px !IMPORTANT;
        padding: 5px 5px 0px 5px;
    }
    .fa:before {
        font-size: 14px;
    }
    #portal-logout {
        position: relative;
        width: 100%;
        text-align: left;
        white-space: nowrap;
        padding: 15px;
        font-size: 12px;
        background-color: #0a5272;
        float: none;
        bottom: 0px;
        left: 0px;
    }

   .sidenav2 i {
        width: 40px;
        text-align: center;
    }

</style>

<div class="sidenav2"
    tal:define="portal_state context/@@plone_portal_state;
                portal_url portal_state/portal_url;
                isRootFolder view/isRootFolder;
                projectPath view/projectPath">
    <ul id="sidenav-vertical">
        <a href="#" tal:attributes="href string:${portal_url}">
            <img tal:attributes="src string:${context/absolute_url}/++theme++gwopa.theme/assets/images/logoGWOPA-header.png"/>
        </a>
        <ul id="sidenav-vertical-overview" tal:condition="not:isRootFolder" class="indentMenu">
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/areas"><i class="fas fa-chart-area" aria-hidden="true"></i> Areas </a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/teams"><i class="fas fa-users" aria-hidden="true"></i> Teams </a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${portal_url}/files"><i class="fas fa-file" aria-hidden="true"></i> Files </a>
        </ul>
        <tal:omit-tag tal:condition="isRootFolder">
            <a class="plone-btn plone-btn-info active" tal:attributes="href string:${projectPath}">
                <i class="fas fa-home"></i><span i18n:translate=""> Overview </span></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/projectareas" href="#">
                <i class="fas fa-chart-area"></i><tal:omit-tag i18n:translate=""> Areas </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/projectteams" href="#">
                <i class="fas fa-users"></i><tal:omit-tag i18n:translate=""> Team </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/projectfiles" href="#">
                <i class="fas fa-file"></i><tal:omit-tag i18n:translate=""> Files </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/planning" href="#">
                <i class="fas fa-calendar-check"></i><tal:omit-tag i18n:translate=""> Planning </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/collaborating" href="#">
                <i class="fas fa-users"></i><tal:omit-tag i18n:translate=""> Collaboration </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/monitoring" href="#">
                <i class="fas fa-chart-pie"></i><tal:omit-tag i18n:translate=""> Monitoring </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/reporting" href="#">
                <i class="fas fa-file-alt"></i><tal:omit-tag i18n:translate=""> Reporting </tal:omit-tag></a>
            <a class="plone-btn plone-btn-info" tal:attributes="href string:${projectPath}/visualizating" href="#">
                <i class="fas fa-tachometer-alt"></i><tal:omit-tag i18n:translate=""> Dashboard </tal:omit-tag></a>
        </tal:omit-tag>
    </ul>
</div>



</html>
