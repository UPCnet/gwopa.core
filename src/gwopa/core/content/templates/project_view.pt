<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="gwopa">
<body>

<metal:content-core fill-slot="main"
      tal:define="partners context/partners;
                  project_manager context/project_manager;
                  project_manager_admin context/project_manager_admin;
                  wop_program context/wop_program;
                  wop_platform context/wop_platform;
                  objectives context/objectives;
                  team context/members;
                  getImprovementAreas view/getImprovementAreas;
                  categories context/category|nothing;
                  country context/country;
                  location context/location;
                  url_quote nocall:modules/Products.PythonScripts.standard/url_quote;
                  canEdit not:view/canEdit;
                  partners view/partners;
                  donors view/donors;
                  others view/others;
                  getProject_manager view/getProject_manager;">

  <button class="context focus">Completed</button>
  <h1 class="documentFirstHeading">
    <a tal:condition="canEdit" tal:attributes="href string:${context/absolute_url}/edit;" title="Edit project" alt="Edit project" href="#"><tal:omit-tag tal:content="context/title"> Project Title</tal:omit-tag>&nbsp;<i class="far fa-edit"></i></a>
    <a tal:condition="canEdit" tal:attributes="href string:${context/absolute_url}" href="#"><i class="far fa-trash-alt red"></i></a>
    <tal:omit-tag tal:condition="not:canEdit" tal:content="context/title"> Project Title</tal:omit-tag>
  </h1>

  <div class="row">
    <div tal:attributes="class python:getImprovementAreas and 'col-md-9' or 'col-md-12';">
      <div class="row">
        <div class="col-md-2">
          <img class="fullwidth" tal:condition="context/image" tal:attributes="src string:${context/absolute_url}/@@images/image" />
          <i class="fas fa-map-marker-alt"></i>&nbsp;<tal:block tal:condition="location"> <span tal:content="location"></span>, </tal:block><span tal:content="country"></span>
        </div>
        <div class="col-md-10">
          <tal:objectives tal:condition="objectives">
            <h2 i18n:translate=""> Description and main objectives </h2>
            <span tal:replace="structure objectives/output"> Project Objectives </span>
          </tal:objectives>
          <span tal:condition="categories" tal:repeat="category categories">
            <a href="" class="link-category" rel="tag"
               tal:content="category"
               tal:define="quotedCat python:url_quote(category)"
               tal:attributes="href string:${context/@@plone_portal_state/navigation_root_url}/@@search?Subject%3Alist=${quotedCat}">
              Category
            </a>
          </span>
        </div>
      </div>
      <div class="row">
        <hr/>
        <div class="col-md-6">
          <h2> Project Dates </h2>
          <div class="col-md-6">
            <tal:omit-tag tal:condition="context/startactual" i18n:translate="">Start (Actual):</tal:omit-tag>
            <span tal:content="context/startactual" style="float:right; margin-right: 10px;">2019-02-02</span>
            <tal:omit-tag tal:condition="context/startplanned" i18n:translate="">Start (Planned):</tal:omit-tag>
            <span style="float:right; margin-right: 10px;" tal:content="context/startplanned">
          </div>
          <div class="col-md-6">
            <tal:omit-tag tal:condition="context/completionactual" i18n:translate="">End (Actual):</tal:omit-tag>
            <span style="float:right; margin-right: 10px;" tal:content="context/completionactual"></span>
            <tal:omit-tag tal:condition="context/completionplanned" i18n:translate="">End (Planned):</tal:omit-tag>
            <span style="float:right; margin-right: 10px;" tal:content="context/completionplanned"></span>
          </div>
        </div>
        <div class="col-md-6">
          <h2 i18n:translate=""> Association to platforms or programmes</h2>
          <ul>
            <li tal:content="wop_platform"></li>
            <li tal:content="wop_program"></li>
          </ul>
        </div>
      </div>

      <div class="row">
        <hr/>
        <h2>
          <tal:block  i18n:translate=""> Main organizations and their contributions</tal:block>
<!--           <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribPartner" href="#"> + New Partner</a>
          <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribDonor" href="#"> + New Donor</a>
          <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribOther" href="#"> + New Other</a> -->
        </h2>

        <div class="col-md-12">
          <tal:objectives tal:condition="partners" >
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th style="padding-left:0px;">
                      <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribPartner" href="#"><i class="fa fa-plus-circle"></i></a>&nbsp;<span style="font-size: 18px;"> Partner Water Operators </span></th>
                    <th class="contibutioncentered" i18n:translate="">In-cash</th>
                    <th class="contibutioncentered" i18n:translate="">In-kind</th>
                  </tr>
                </thead>
                <tr tal:repeat="partner partners">
                  <td><a class="pat-plone-modal" tal:attributes="href string:${partner/edit}" href="#"><i class="far fa-edit"></i></a>&nbsp;<tal:block tal:content="partner/title"></tal:block></td>
                  <td class="contibutioncentered" tal:content="partner/incash"></td>
                  <td class="contibutioncentered" tal:content="partner/inkind"></td>
                </tr>
              </table>
            </div>
          </tal:objectives>
        </div>

        <div class="col-md-12">
          <tal:objectives tal:condition="donors" >
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th style="padding-left:0px;">
                      <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribDonor" href="#"><i class="fa fa-plus-circle"></i></a>&nbsp;<span style="font-size: 18px;"> Donors </span></th>
                    <th class="contibutioncentered" i18n:translate="">In-cash</th>
                    <th class="contibutioncentered" i18n:translate="">In-kind</th>
                  </tr>
                </thead>
                <tr tal:repeat="partner donors">
                  <td><a class="pat-plone-modal" tal:attributes="href string:${partner/edit}" href="#"><i class="far fa-edit"></i></a>&nbsp;<tal:block tal:content="partner/title"></tal:block></td>
                  <td class="contibutioncentered" tal:content="partner/incash"></td>
                  <td class="contibutioncentered" tal:content="partner/inkind"></td>
                </tr>
              </table>
            </div>
          </tal:objectives>
        </div>

        <div class="col-md-12">
          <tal:objectives tal:condition="others" >
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th style="padding-left:0px;">
                      <a class="pat-plone-modal" data-pat-plone-modal="{&quot;actionOptions&quot;: {&quot;displayInModal&quot;: false}}" tal:attributes="href string:${context/absolute_url}/contribs/++add++ContribOther" href="#"><i class="fa fa-plus-circle"></i></a>&nbsp;<span style="font-size: 18px;"> Other Organizations </span></th>
                    <th class="contibutioncentered" i18n:translate="">In-cash</th>
                    <th class="contibutioncentered" i18n:translate="">In-kind</th>
                  </tr>
                </thead>
                <tr tal:repeat="partner others">
                  <td><a class="pat-plone-modal" tal:attributes="href string:${partner/edit}" href="#"><i class="far fa-edit"></i></a>&nbsp;<tal:block tal:content="partner/title"></tal:block></td>
                  <td class="contibutioncentered" tal:content="partner/incash"></td>
                  <td class="contibutioncentered" tal:content="partner/inkind"></td>
                </tr>
              </table>
            </div>
          </tal:objectives>
        </div>

        <div class="buttonbudget">
          <tal:omit-tag i18n:translate="">Total budget: </tal:omit-tag>&nbsp;<span tal:content="view/get_currency"></span>
        </div>
      </div>

      <div class="row">
        <hr/>
        <div class="col-md-12">
          <tal:objectives tal:condition="getProject_manager">
            <h2 i18n:translate=""> Focal point partner </h2>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th i18n:translate="">Name</th>
                    <th i18n:translate="">Partner</th>
                  </tr>
                </thead>
                <tr tal:repeat="partner getProject_manager">
                  <td>
                    <tal:block tal:condition="partner/manager"></tal:block>
                    <tal:block tal:condition="partner/project"><i class="fa fa-star"></i></tal:block>
                    <tal:block tal:content="partner/name"></tal:block>
                  </td>
                  <tal:block tal:define="value partner/partners" tal:condition="partner/partners">
                    <ul>
                      <td tal:condition="python:isinstance(value, basestring)">
                        <span tal:replace="field/value"></span>
                      </td>
                      <td tal:condition="not:python:isinstance(value, basestring)">
                        <span tal:replace="structure python:'<li>'+'</li><li>'.join(str(s) for s in value)" />
                      </td>
                    </ul>
                  </tal:block>
                </tr>
              </table>
            </div>
          </tal:objectives>
        </div>
      </div>
    </div>

    <div class="col-md-3" tal:condition="getImprovementAreas">
      <h2 i18n:translate=""> Working Areas</h2>
      <tal:areas repeat="item getImprovementAreas">
        <div class="col-lg-12 col-md-12">
          <a tal:attributes="href item/url; title item/title; alt item/title">
            <div class="box">
              <img class="box-img" tal:attributes="src string:${item/image};"/>
              <div class="card-body">
                <h4 class="card-title">
                  <a tal:attributes="href item/url" tal:content="item/title">Event Title</a>
                </h4>
              </div>
            </div>
          </a>
        </div>
      </tal:areas>
    </div>
  </div>

</metal:content-core>

</body>
</html>
